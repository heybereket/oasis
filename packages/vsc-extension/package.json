{
  "name": "@oasis-sh/vsc-extension",
  "displayName": "Oasis",
  "description": "Oasis for VSCode!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vsc-oasis-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsc-oasis.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsc-oasis-sidebar-view",
          "title": "VSC Oasis",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "vsc-oasis-sidebar-view": [
        {
          "type": "webview",
          "id": "vsc-oasis-sidebar",
          "name": "VSC Oasis",
          "icon": "logo.svg",
          "contextualTitle": "VSC Oasis"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vite:watch": "cd vsc-ui && concurrently \"tsc --watch\" \"vite build --watch\" && cd .."
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "concurrently": "^6.1.0",
    "eslint": "^7.15.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.1.2",
    "vite": "^2.3.3",
    "vscode-test": "^1.4.1"
  }
}

{
  "name": "@oasis-sh/vsc-extension",
  "displayName": "Oasis",
  "description": "Oasis for VSCode!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vsc-oasis-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsc-oasis.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsc-oasis-sidebar-view",
          "title": "VSC Oasis",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "vsc-oasis-sidebar-view": [
        {
          "type": "webview",
          "id": "vsc-oasis-sidebar",
          "name": "VSC Oasis",
          "icon": "logo.svg",
          "contextualTitle": "VSC Oasis"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "prettify": "prettier --write src/*.ts vsc-ui/src/*.ts vsc-ui/src/*.tsx",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "node ./out/test/runTest.js",
    "vite:build": "cd vsc-ui && vite build && cd ..",
    "vite:watch": "cd vsc-ui && concurrently \"tsc --watch\" \"vite build --watch\" && cd ..",
    "server:start": "node server/dist/index.js",
    "server:dev": "ts-node-dev server/src/index.ts",
    "server:build": "tsc -p server"
  },
  "prettier": "@oasis-sh/prettier-config",
  "eslintConfig": {
    "extends": "@oasis-sh/eslint-config"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^15.12.2",
    "@types/node-fetch": "^2.5.10",
    "@types/prettier": "^2.3.0",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "glob": "^7.1.7",
    "prettier": "^2.3.1",
    "typescript": "4.2.4",
    "vite": "^2.3.7",
    "vscode-test": "^1.5.2"
  }
}

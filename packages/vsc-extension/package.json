{
  "name": "@oasis-sh/vsc-extension",
  "displayName": "Oasis",
  "description": "Oasis for VSCode!",
  "private": true,
  "nohoist": [
    "react",
    "react-dom"
  ],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vsc-oasis-sidebar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vsc-oasis.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vsc-oasis-sidebar-view",
          "title": "VSC Oasis",
          "icon": "logo.svg"
        }
      ]
    },
    "views": {
      "vsc-oasis-sidebar-view": [
        {
          "type": "webview",
          "id": "vsc-oasis-sidebar",
          "name": "VSC Oasis",
          "icon": "logo.svg",
          "contextualTitle": "VSC Oasis"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch:rollup": "rollup -c -w",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/glob": "^7.1.3",
    "@types/node": "^17.0.5",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/vscode": "^1.57.0",
    "concurrently": "^6.2.0",
    "glob": "^7.1.7",
    "rollup": "^2.53.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "4.3.5",
    "vscode-test": "^1.5.2"
  }
}

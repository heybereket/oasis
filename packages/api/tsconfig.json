{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@lib/*": ["src/lib/*"],
      "@middleware/*": ["src/middleware/*"],
      "@modules/*": ["src/modules/*"],
      "@service/*": ["src/service/*"],
      "@typings/*": ["src/typings/*"],
      "@utils/*": ["src/utils/*"],
      "@root/*": ["src/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "importHelpers": true
  },
}

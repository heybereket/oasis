{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@entities/*": ["src/entities/*"],
      "@lib/*": ["src/lib/*"],
      "@modules/*": ["src/modules/*"],
      "@test-utils/*": ["src/test-utils/*"],
      "@utils/*": ["src/utils/*"],
      "@root/*": ["src/*"]
    },
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true
  }
}

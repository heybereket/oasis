{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["jest.config.ts", "test/**/*", "dist/**/*"]
}


{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@modules/*": ["src/modules"],
      "@styles/*": ["src/styles"],
      "@icons/*": ["src/icons/*"],
    },
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "types": ["@types/jest"],
    "moduleResolution": "node",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/test/**/*"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}

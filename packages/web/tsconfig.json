{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@public/*": [
        "public/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@parser/*": [
        "src/parser/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "preserveWatchOutput": true
  },
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "cypress"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}

{
  "name": "@oasis-sh/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsc -p server && node server/dist/index.js",
    "build": "next build && tsc -p server",
    "start": "NODE_ENV=production node server/dist/index.js",
    "prettify": "prettier --write src/{.,components,modules,pages,lib}/*.tsx src/{components,modules,pages,lib}/**/*.tsx",
    "lint": "yarn run eslint . --ext ts --ext tsx --ext js",
    "clean": "rimraf .next/*",
    "setup:remote": "yarn clean || echo \"API_MODE='remote'\\\nNEXT_PUBLIC_BASE_URL='http://localhost:3000'\" > .env",
    "cy:install": "cypress install",
    "cy:run": "cypress run --browser chrome",
    "cy:open": "cypress open --browser chrome"
  },
  "prettier": "@oasis-sh/prettier-config",
  "eslintConfig": {
    "extends": "@oasis-sh/eslint-config"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^11.0.0",
    "@sentry/react": "^6.7.1",
    "@sentry/tracing": "^6.7.1",
    "express": "^4.17.1",
    "formik": "^2.2.9",
    "github-markdown-css": "^4.0.0",
    "next": "^11.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-infinite-scroll-component": "^6.1.0",
    "react-markdown": "^6.0.2",
    "react-syntax-highlighter": "^15.4.3",
    "remark-gfm": "^1.0.0",
    "tailwindcss": "^2.2.0",
    "typescript": "4.2.4",
    "zustand": "^3.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.5",
    "@cypress/webpack-preprocessor": "^5.9.0",
    "@tailwindcss/typography": "^0.4.1",
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.2",
    "@types/node-fetch": "^2.5.10",
    "@types/react-dom": "^17.0.7",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "autoprefixer": "^10.2.6",
    "chalk": "^4.1.1",
    "cypress": "^7.5.0",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "moment-timezone": "^0.5.33",
    "node-fetch": "^2.6.1",
    "postcss": "^8.3.5",
    "prettier": "2.3.1",
    "pretty-ms": "^7.0.1",
    "rimraf": "^3.0.2",
    "tailwind-scrollbar": "^1.3.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "webpack": "^5.39.1"
  }
}

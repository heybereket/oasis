{
  "name": "@oasis/client-gql",
  "version": "1.0.0",
  "description": "Client-Side GraphQL API Hooks for Oasis",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "gen": "graphql-codegen",
    "build": "graphql-codegen && tsc",
    "watch:gen": "graphql-codegen -w",
    "watch:tsc": "tsc --watch",
    "dev": "run-p \"watch:gen\" \"watch:tsc\"",
    "clean": "rimraf dist/*"
  },
  "license": "MIT",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@graphql-codegen/typescript-document-nodes": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.16",
    "@graphql-codegen/typescript-react-apollo": "^2.2.4",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@apollo/client": "^3.3.17",
    "graphql": "^15.5.0",
    "typescript": "^4.2.4"
  }
}

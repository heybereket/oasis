{
  "name": "oasis",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/eslint": "^7",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.4",
    "husky": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.5.5"
  },
  "scripts": {
    "dev:web": "yarn workspace @oasis/web dev",
    "dev:api": "yarn workspace @oasis/api dev",
    "dev:api:server": "yarn workspace @oasis/api dev:server",
    "dev:gql": "yarn workspace @oasis/client-gql dev",
    "build": "yarn plugin import workspace-tools && yarn workspaces foreach -p run build",
    "dev": "run-p -l \"dev:web\" \"dev:api\" \"dev:gql\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.4"
  },
  "lint-staged": {
    "*": "git add ."
  }
}
